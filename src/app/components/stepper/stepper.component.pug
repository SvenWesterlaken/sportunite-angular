.stepper-nav-container
  ng-container(*ngFor="let step of _steps; let i = index")
    app-stepper-nav.step-nav-item((click)="step.select()", (keydown)="_onKeydown($event)", [tabIndex]="_focusIndex === i ? 0 : -1", [id]="_getStepLabelId(i)",
                                  [attr.aria-controls]="_getStepContentId(i)", [attr.aria-selected]="selectedIndex == i", [index]="i", [icon]="_getIndicatorType(i)",
                                  [selected]="selectedIndex === i", [active]="step.completed || selectedIndex === i || !linear", [optional]="step.optional", [class.selected]="selectedIndex === i")

.stepper-container
  .stepper-content(*ngFor="let step of _steps; let i = index", role="tabpanel", [@stepTransition]="_getAnimationDirection(i)", [id]="_getStepContentId(i)", [attr.aria-expanded]="selectedIndex === i")
    ng-container([ngTemplateOutlet]="step.content")
