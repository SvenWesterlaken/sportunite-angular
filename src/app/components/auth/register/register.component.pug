.container
  form([formGroup]="registerForm").register-container
    app-stepper
      app-step(formGroupName="registerName")
        h3.big-form-header Hoi, wat is uw naam?
        .big-form-input-container
          mat-form-field.big-form-field.width50(floatLabel="never")
            input(matInput, placeholder="Voornaam", formControlName="firstName", type="text")
            mat-error(*ngIf="registerForm.get('registerName.firstName').hasError('required')") Dit veld is verplicht
          mat-form-field.big-form-field.width50(floatLabel="never")
            input(matInput, placeholder="Achternaam", formControlName="lastName", type="text")

      app-step
        span Step 2

      app-step
        span Step 3
